/* pages/color/index.wxss */

.color-container {
  position: relative;
  width: 100vw;
  height: 100vh;
}
.preview-container {
  position:absolute;
  bottom: 0;
}
.preview {
  margin-top: 0.5em;
  width:80vw;
  height:80rpx;
}
.choose slider {
  width: 80vw;
  margin-right: -0.5em;
}

.section__title {
  margin-left: 0.5em;
}

.bottom {
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 40vh;
  padding-bottom: 0.8em;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.save-reset button[size=mini] {
  font-size: 1.1em; 
}

.bottom button {
  margin: 0.4em;
}

.picker-container {
  position:absolute;
  width: 100vw;
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1.5em;
  height: 45vh;
}